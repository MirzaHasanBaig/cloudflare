pipeline {
    agent any
    environment {
        cloudflare = credentials('cloudflare')
    }
    stages {
        stage('init') {
            steps {
                bat "C:/terraform/terraform.exe init"
            }
        }
        stage('plan') {
            steps {
                bat "C:/terraform/terraform.exe plan --var token=$cloudflare -auto-approve"
            }
        }
        stage('Build') {
            steps {
                bat "C:/terraform/terraform.exe apply --var token=$cloudflare -auto-approve"
            }
        }
    }
}